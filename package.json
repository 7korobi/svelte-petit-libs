{
  "name": "svelte-petit-libs",
  "version": "0.0.4",
  "license": "MIT",
  "scripts": {
    "deploy": "run-s format build",
    "build": "vite build",
    "serve": "vite preview",
    "check": "svelte-check",
    "css": "run-s make:sass make:brotli",
    "test": "run-s jest",
    "jest": "jest",
    "validate": "run-p format test check",
    "format": "prettier --write --no-semi --svelte-sort-order scripts-markup-styles ./src/",
    "make:model": "ts-node src/make/model.ts",
    "make:schema": "ts-node src/cli/schema.ts",
    "make:sass": "sass --style compressed src/scss:public/css 2>&1 | ruby -pe '$_.sub!(/.+ DEBUG: /,\"\")' | sort | uniq > src/__spec__/__snapshots__/scss-contrast.txt",
    "make:brotli": "find public -type f -not -name \"*.br\" | grep -v \"dist/font\" | xargs -L1  brotli -Z -f -k",
    "dev": "vite"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "next",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@types/node-fetch": "^2.5.8",
    "fake-indexeddb": "^3.1.2",
    "fastify": "^3.14.1",
    "jest": "^26.6.3",
    "node-fetch": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "quicktype": "^15.0.260",
    "roosterjs-editor-api": "^8.1.0",
    "roosterjs-editor-dom": "^8.1.0",
    "sirv-cli": "^1.0.11",
    "svelte-check": "^1.3.0",
    "svelte-jester": "^1.3.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript-json-schema": "^0.50.0",
    "vite": "^2.1.4"
  },
  "dependencies": {
    "@editorjs/checklist": "^1.3.0",
    "@editorjs/delimiter": "^1.2.0",
    "@editorjs/editorjs": "^2.19.3",
    "@editorjs/header": "^2.6.1",
    "@editorjs/link": "^2.3.1",
    "@editorjs/list": "^1.6.2",
    "@editorjs/marker": "^1.2.2",
    "@editorjs/paragraph": "^2.8.0",
    "@editorjs/quote": "^2.4.0",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/svelte": "^3.0.3",
    "@tsconfig/svelte": "^1.0.10",
    "dexie": "^3.0.3",
    "editorjs-undo": "^0.1.4",
    "fancy-date": "^0.4.1",
    "firebase": "^8.3.1",
    "firebase-admin": "^9.6.0",
    "firebase-functions": "^3.13.2",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "roosterjs": "^7.16.0",
    "sass": "^1.32.8",
    "svelte": "^3.35.0",
    "svelte-preprocess": "^4.7.0",
    "svelte-preprocess-markdown": "^2.7.3",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3",
    "ua-parser-js": "^0.7.33"
  },
  "jest": {
    "transform": {
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ],
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ]
  }
}
